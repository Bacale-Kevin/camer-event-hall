// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("SUPABASE_DATABASE_URL")
}

model User {
  id                  String    @id @default(uuid())
  name                String
  email               String    @unique
  phone               String?
  hashedPassword      String
  emailVerified       Boolean   @default(false)
  profilePicUrl       String?
  role                Role      @default(CLIENT)
  salt                String?
  resetToken          String?
  resetTokenExpiresAt DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  reviews       Review[]
  venues        Venue[]
  notifications Notification[]
  bookings      Booking[]

  @@map("users")
}

model Venue {
  id            String   @id @default(uuid())
  name          String
  price         Float
  description   String
  location      String
  city          String
  guestCapacity Int
  longitude     Int?
  latitude      Int?
  isVerified    Boolean  @default(false)
  imagesUrl     String[]
  likes         String[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String
  user       User     @relation(fields: [userId], references: [id])
  userId     String

  reviews       Review[]
  notifications Notification[]
  bookings      Booking[]
  facilities    Facility[]

  @@map("venues")
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  venues Venue[]

  @@map("categories")
}

model Facility {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  venues Venue[]

  @@map("facilities")
}

model Review {
  id        String   @id @default(uuid())
  comment   String
  rating    Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User   @relation(fields: [userId], references: [id])
  userId  String
  vunue   Venue  @relation(fields: [venueId], references: [id])
  venueId String

  @@map("reviews")
}

model Booking {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User   @relation(fields: [userId], references: [id])
  userId  String
  venue   Venue  @relation(fields: [venueId], references: [id])
  venueId String

  @@map("bookings")
}

model Notification {
  id        String   @id @default(uuid())
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User   @relation(fields: [userId], references: [id])
  userId  String
  venue   Venue  @relation(fields: [venueId], references: [id])
  venueId String

  @@map("notifications")
}

enum Role {
  CLIENT
  OWNER
  ADMIN
}
